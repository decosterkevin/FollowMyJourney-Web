/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #b3ffb3
background-color = #faf9f0
body
  font-family 'Georgia'
  background-color background-color
  color #444
 
.loader {
    position fixed
    left 0px
    top 0px
    width 100%
    height 100%
    z-index 9999
    background url('../journey/images/loading.gif') 50% 50% no-repeat rgb(249,249,249)

}
header
  font-family 'Quicksand'
  color #fff
  font-size 25px
  padding 20px
  height 7vh
  text-align center
  
  background-color main-color

#left
	width 20%
	height 100%
	float left
	color main-color

#right
	color #000000
	float right
	width 20%
	height 40px
	
#center
	color #000000
	padding 15px
	text-align center
	
#content
	background-color #000000
	height 90vh
	background-image url(../journey/images/back.jpg)
	background-size cover
#map
	border-width 8px
	border-style solid
	border-color main-color
	width 70%
	height 600px
